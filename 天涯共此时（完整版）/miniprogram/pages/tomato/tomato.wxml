<!--pages/tomato/tomato.wxml-->
<view class="view_contain">
  <view class= "view_0"> 
    <text class="gray">想想你的人生</text>
  </view>
  <view class="view_1">
    <van-image
      width="8rem"
      height="8rem"
      fit="contain"
      src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1605886489279&di=f09ae40d582bf520706ca38383c506e2&imgtype=0&src=http%3A%2F%2Fku.90sjimg.com%2Felement_origin_min_pic%2F17%2F02%2F24%2Fad739c29c468632d80408d61039b4c69.jpg"
    />
  </view>
  <!--倒计时-->
  <view class="view_2">
    <van-count-down use-slot time="{{ time }}" bind:change="onChange">
      <text class="item">{{ timeData.hours }}</text>
      <text class="item">{{ timeData.minutes }}</text>
      <text class="item">{{ timeData.seconds }}</text>
    </van-count-down>
  </view>
  <view class="view_3">
    <text class="gray1">HOUR　　MIN　　SEC</text>
  </view>
</view>
